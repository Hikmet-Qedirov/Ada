<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ada" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
        <item name="snackbarTextViewStyle">@style/MySnackBarTextStyle</item>
        <item name="snackbarButtonStyle">@style/MySnackBarButtonStyle</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>

        <!--    Custom    -->
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textColor">@drawable/custom_button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/minButtonHeight</item>
        <item name="android:paddingTop">@dimen/marginSubContainer</item>
        <item name="android:paddingBottom">@dimen/marginSubContainer</item>
        <item name="android:paddingStart">@dimen/buttonPaddingSize</item>
        <item name="android:paddingEnd">@dimen/buttonPaddingSize</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <!-- snackbar style in res/values -->
    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:layout_margin">@dimen/marginSnackBar</item>
    </style>

    <style name="MySnackBarButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MySnackBarTextStyle" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
        <item name="android:fadingEdge">none</item>
    </style>
</resources>